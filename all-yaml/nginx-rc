apiVersion: v1
kind: ReplicationController
metadata:
  creationTimestamp: null
  generation: 1
  labels:
    name: nginx-rc
  name: nginx-rc
spec:
  replicas: 1
  selector:
    name: nginx-apps
  template:
    metadata:
      creationTimestamp: null
      labels:
        name: nginx-apps
    spec:
      containers:
      - image: vmware/nginx:1.11.5-patched
        imagePullPolicy: IfNotPresent
        name: nginx-app
        ports:
        - containerPort: 80
          protocol: TCP
        - containerPort: 443
          protocol: TCP
        resources: {}
        terminationMessagePath: /dev/termination-log
        volumeMounts:
        - mountPath: /etc/nginx
          name: config
      dnsPolicy: ClusterFirst
      restartPolicy: Always
      securityContext: {}
      terminationGracePeriodSeconds: 30
      volumes:
      - configMap:
          defaultMode: 420
          items:
          - key: config
            path: nginx.conf
          - key: pkey
            path: https.key
          - key: cert
            path: https.crt
          name: harbor-nginx-config
        name: config
status:
  replicas: 0
